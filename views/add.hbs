<form action="/restaurants/add" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name: </label>
    <input type="text" placeholder="restaurant's name" name="name" id="name" required>
  </div>
  
  <div class="mb-3">
    <label for="name_en" class="form-label">English name: </label>
    <input type="text" placeholder="restaurant's English name" name="name_en" id="name_en">
  </div>
  
  <div class="mb-3">
    <label for="category" class="form-label">Category: </label>
    <input type="text" placeholder="restaurant's category" name="category" id="category">
  </div>
  
  <div class="mb-3">
    <label for="image" class="form-label">Image url: </label>
    <input type="text" placeholder="restaurant's image url" name="image" id="image">
  </div>
  
  <div class="mb-3">
    <label for="location" class="form-label">Location: </label>
    <input type="text" placeholder="restaurant's location" name="location" id="location">
  </div>
  
  <div class="mb-3">
    <label for="phone" class="form-label">Phone: </label>
    <input type="text" placeholder="restaurant's phone" name="phone" id="phone">
  </div>
  
  <div class="mb-3">
    <label for="google_map" class="form-label">Google map url: </label>
    <input type="text" placeholder="restaurant's google_map url" name="google_map" id="google_map">
  </div>
  
  <div class="mb-3">
    <label for="rating" class="form-label">Rating: </label>
    <input type="number" placeholder="restaurant's rating" name="rating" id="rating"  min="0" max="5" step="0.1">
  </div>
  
  <div class="mb-3">
    <label for="description" class="form-label">Description: </label>
    <textarea id="description" name="description" placeholder="restaurant's description"></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Create</button>
  <a href="/restaurants">back</a>
</form>